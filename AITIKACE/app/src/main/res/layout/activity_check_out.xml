<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckOut"
    android:background="@drawable/checkin_design">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="353dp"
        android:layout_height="78dp"
        android:text="@string/after_work"
        android:fontFamily="cursive"
        android:textSize="49sp"
        android:textStyle="bold"
        android:textColor="#634242"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.169" />

    <Button
        android:id="@+id/btnCheckOut"
        android:layout_width="323dp"
        android:layout_height="79dp"
        android:background="@drawable/btn_submit_design"
        android:drawableLeft="@drawable/gohome"
        android:padding="15dp"
        android:text="@string/checkout_text"
        android:textColor="#F8EEEE"
        android:textSize="26sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.396" />
</androidx.constraintlayout.widget.ConstraintLayout>