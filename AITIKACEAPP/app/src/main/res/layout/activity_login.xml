<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:background="@drawable/login_design">

    <TextView
        android:id="@+id/textView"
        android:layout_width="257dp"
        android:layout_height="133dp"
        android:fontFamily="cursive"
        android:padding="5dp"
        android:text="@string/login_text"
        android:textAlignment="center"
        android:textColor="#6D4D4D"
        android:textSize="70sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="329dp"
        android:layout_height="60dp"
        android:background="@drawable/inputid_design"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:drawableStart="@drawable/ic_email_black_24dp"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="@string/email_text"
        android:textColorHint="#7C7171"
        android:inputType="textEmailAddress"
        android:padding="15dp"
        android:textColor="#242323"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.142" />

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="332dp"
        android:layout_height="60dp"
        android:background="@drawable/inputid_design"
        android:drawableLeft="@drawable/ic_security_black_24dp"
        android:drawableStart="@drawable/ic_security_black_24dp"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="@string/password_text"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColor="#242323"
        android:textColorHint="#7C7171"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEmail"
        app:layout_constraintVertical_bias="0.034" />

    <Button
        android:id="@+id/btnGetStarted"
        android:layout_width="178dp"
        android:layout_height="55dp"
        android:background="@drawable/submitbtn_design"
        android:fontFamily="serif"
        android:text="@string/getStarted_text"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPassword"
        app:layout_constraintVertical_bias="0.03" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="189dp"
        android:layout_height="57dp"
        android:fontFamily="serif"
        android:text="@string/decision_text"
        android:textAlignment="center"
        android:textColor="#6D4D4D"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.184"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGetStarted"
        app:layout_constraintVertical_bias="0.072" />

    <TextView
        android:id="@+id/txtRegister"
        android:layout_width="127dp"
        android:layout_height="57dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:fontFamily="serif"
        android:gravity="start"
        android:padding="5dp"
        android:text="@string/register_text"
        android:textAlignment="center"
        android:textColor="#FF9800"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.804"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGetStarted"
        app:layout_constraintVertical_bias="0.038" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="133dp"
        android:layout_height="39dp"
        android:fontFamily="serif"
        android:text="@string/login_msg"
        android:textAlignment="center"
        android:textColor="#6D4D4D"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.348"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.429" />

    <TextView
        android:id="@+id/txtAdmin"
        android:layout_width="77dp"
        android:layout_height="49dp"
        android:fontFamily="serif"
        android:padding="10dp"
        android:text="@string/admin_text"
        android:textAlignment="center"
        android:textColor="#FF9800"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.649"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRegister"
        app:layout_constraintVertical_bias="0.422" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="99dp"
        android:layout_height="38dp"
        android:fontFamily="serif"
        android:text="@string/option"
        android:textColor="#868080"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGetStarted"
        app:layout_constraintVertical_bias="0.327" />

</androidx.constraintlayout.widget.ConstraintLayout>